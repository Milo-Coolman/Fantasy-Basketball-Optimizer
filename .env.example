# ===========================================
# Fantasy Basketball Optimizer - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control
# ===========================================

# ----- Flask Configuration -----
FLASK_APP=backend/app.py
FLASK_ENV=development
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# ----- Database -----
# SQLite for development
DATABASE_URL=sqlite:///fantasy_basketball.db
# PostgreSQL for production (uncomment and configure):
# DATABASE_URL=postgresql://user:password@localhost:5432/fantasy_basketball

# Enable SQL query logging (development only)
SQLALCHEMY_ECHO=false

# ----- CORS Configuration -----
# Comma-separated list of allowed origins for the React frontend
CORS_ORIGINS=http://localhost:3000

# ----- Security -----
# Bcrypt hashing rounds (12+ recommended for production)
BCRYPT_LOG_ROUNDS=12

# Encryption key for storing ESPN cookies (defaults to SECRET_KEY if not set)
# COOKIE_ENCRYPTION_KEY=your-encryption-key-here

# ----- Rate Limiting -----
RATELIMIT_DEFAULT=100 per minute
RATELIMIT_STORAGE_URL=memory://

# ----- ESPN API Settings -----
# Timeout in seconds for ESPN API requests
ESPN_API_TIMEOUT=30
# Number of retries for failed ESPN API requests
ESPN_API_RETRIES=3

# ----- ESPN League Credentials (for debug script) -----
# Your ESPN Fantasy Basketball league ID (from the URL)
ESPN_LEAGUE_ID=your-league-id
# ESPN season year
ESPN_YEAR=2025
# ESPN cookies (get from browser developer tools)
# These are needed to access private league data
ESPN_S2=your-espn-s2-cookie-here
SWID=your-swid-cookie-here

# ----- Scheduler -----
# Enable/disable the scheduler
SCHEDULER_ENABLED=true
# Hour for daily data refresh (0-23, default: 3 AM)
SCHEDULER_REFRESH_HOUR=3
# Minute for daily data refresh (0-59, default: 0)
SCHEDULER_REFRESH_MINUTE=0
# Timezone for scheduler (default: America/New_York)
SCHEDULER_TIMEZONE=America/New_York

# ----- External APIs -----
# Anthropic API key for AI features (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
